                                android:src="@drawable/pen"
                                android:layout_marginStart="15dp"
                                android:layout_gravity="center"
                                app:tint="@color/greyLigth"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/trash_solid"
                                android:layout_marginStart="15dp"
                                android:layout_gravity="center"
                                app:tint="@color/greyLigth"/>
                        </LinearLayout>
                    </TableRow>
